{
  "name": "poe-editor",
  "version": "1.0.0",
  "description": "A Markdown editor with vim support - Monorepo",
  "author": "Poe",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:app\" \"npm:dev:proxy\" --names \"app,proxy\" --prefix-colors \"blue,green\"",
    "dev:app": "npm run dev -w packages/app",
    "dev:proxy": "npm run dev -w packages/proxy",
    "build": "npm run build -w packages/app",
    "build:proxy": "npm run build -w packages/proxy",
    "lint": "npm run lint -ws",
    "lint:fix": "npm run lint:fix -ws",
    "format": "npm run format -ws",
    "format:check": "npm run format:check -ws",
    "test": "npm test -w packages/app",
    "test:coverage": "npm run test:coverage -w packages/app",
    "test:e2e": "npm run test:e2e -w packages/app",
    "deploy:app": "npm run deploy -w packages/app",
    "deploy:proxy": "npm run deploy -w packages/proxy"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.0.0",
    "lightningcss-linux-x64-gnu": "^1.0.0"
  }
}
